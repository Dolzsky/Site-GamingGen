{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps" : [
    {
      "name"              : "SI-GamingGen",
      "script"            : "server.js",
      "instances"          : 1,
      "exec_mode"         : "cluster",
      "max_memory_restart": "512M",
      "port"              : 3000,
      "watch"             : false,
      "env"               : {
        "COMMON_VARIABLE"   : "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy"  : {
    "pre-production"    : {
      "user"              : "nodeuser",
      "host"              : "darkterra.fr",
      "port"              : "22",
      "key"               : "/home/ubuntu/.ssh/id_rsa_nodeuser",
      "ref"               : "origin/develop",
      "repo"              : "https://github.com/GamingGen/Site-GamingGen.git",
      "path"              : "/home/nodeuser/www/pre-production",
      "pre-deploy-local"  : "echo 'This is a local executed command test Prod'",
      "post-deploy"       : "npm install; gulp prod; rm -fr View/Javascript View/Style docs OnlyForCloude9 karma.conf.js .eslintrc .editorconfig; mv View/dist/* View/; rm -fr View/dist; pm2 startOrReload ecosystem.json --env production;",
      "env" : {
        "NODE_ENV"                      : "production",
        "NODE_TLS_REJECT_UNAUTHORIZED"  : "0",
        "NODEMAILER_USER"               : process.env.NODEMAILER_USER,
        "NODEMAILER_PASS"               : process.env.NODEMAILER_PASS
      }
    },
  }
}
