{
  /**
   * Application configuration section
   * http://pm2.keymetrics.io/docs/usage/application-declaration/
   */
  "apps" : [
    {
      "name"              : "SI-GamingGen",
      "script"            : "server.js",
      "instances"         : 1,
      "exec_mode"         : "cluster",
      "max_memory_restart": "512M",
      "port"              : 3000,
      "watch"             : false,
      "env"               : {
        "COMMON_VARIABLE"   : "true"
      },
      "env_production" : {
        "NODE_ENV": "production"
      }
    }
  ],

  /**
   * Deployment section
   * http://pm2.keymetrics.io/docs/usage/deployment/
   */
  "deploy"  : {
    "pre-production"    : {
      "user"              : "nodeuser",
      "host"              : "darkterra.fr",
      "port"              : "22",
      "key"               : "/home/ubuntu/.ssh/id_rsa_nodeuser",
      "ref"               : "origin/develop",
      "repo"              : "https://github.com/GamingGen/Site-GamingGen.git",
      "path"              : "/home/nodeuser/www/pre-production",
      "pre-deploy-local"  : "echo 'Backup BDD Pre-Prod and process app update'; mongodump --archive=/var/tmp/gaming-gen_pp.gz --gzip --db gaminggen",
      "post-deploy"       : "npm install && gulp build && gulp optimizeImg && rm -fr View/Partial View/Javascript View/Img View/Style View/css View/js docs OnlyForCloude9 OnlyForVisualCode karma.conf.js .eslintrc .editorconfig && mv View/dist/* View/ && rm -fr View/dist && pm2 startOrReload ecosystem.json;",
      "env" : {
        "NODE_ENV"                      : "production",
        "NODE_TLS_REJECT_UNAUTHORIZED"  : "0",
        "NODEMAILER_MAIL"               : process.env.NODEMAILER_MAIL,
        "NODEMAILER_PASS"               : process.env.NODEMAILER_PASS,
        "PORT"                          : process.env.PORT
      }
    },
    "production"    : {
      "user"              : "nodeuser",
      "host"              : "gaming-gen.fr",
      "port"              : "22",
      "key"               : "/home/ubuntu/.ssh/id_rsa_prod_nodeuser",
      "ref"               : "origin/develop",
      "repo"              : "https://github.com/GamingGen/Site-GamingGen.git",
      "path"              : "/home/nodeuser/www/production",
      "pre-deploy-local"  : "echo 'Backup BDD Prod and process app update'; mongodump --archive=/var/tmp/gaming-gen_prod.gz --gzip --db gaminggen",
      "post-deploy"       : "npm install && gulp build && gulp optimizeImg && rm -fr View/Partial View/Javascript View/Img View/Style View/css View/js docs OnlyForCloude9 OnlyForVisualCode karma.conf.js .eslintrc .editorconfig && mv View/dist/* View/ && rm -fr View/dist && pm2 startOrReload ecosystem.json;",
      "env" : {
        "NODE_ENV"                      : "production",
        "NODE_TLS_REJECT_UNAUTHORIZED"  : "0",
        "NODEMAILER_MAIL"               : process.env.NODEMAILER_MAIL,
        "NODEMAILER_PASS"               : process.env.NODEMAILER_PASS,
        "PORT"                          : 80
      }
    },
  }
}
